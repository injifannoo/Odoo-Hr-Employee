                <search>
                    <field name="name" />
                    <field name="department_id" />
                    <filter string="Age > 30" domain="[('age', '>', 30)]" />
                </search>
            </field>
        </record> -->

        <record id="action_employee" model="ir.actions.act_window">
            <field name="name">ITU Employees</field>
            <field name="res_model">hr_system.employee</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>