<odoo>
    <data>
        <record id="view_form_hr_employee" model="ir.ui.view">
            <field name="name">hr_system.employee.form</field>
            <field name="model">hr_system.employee</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="age" />
                            <field name="department_id" />
                            <field name="retirement_age" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_tree_hr_employee" model="ir.ui.view">
            <field name="name">hr_system.employee.tree</field>
            <field name="model">hr_system.employee</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="age" />
                    <field name="department_id" />
                    <field name="retirement_age" />
                </tree>
            </field>
        </record>

        <!-- <record id="view_search_hr_employee" model="ir.ui.view">
