<odoo>
    <data>
        <record
            id="view_form_hr_department" model="ir.ui.view">
            <field name="name">hr_system.department.form</field>
            <field name="model">hr_system.department</field>
            <field name="arch" type="xml">
                <form string="Department">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="manager_id" />
                            <field name="employee_ids" widget="one2many_list"
                                context="{'default_department_id': id}" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_tree_hr_department" model="ir.ui.view">
            <field name="name">hr_system.department.tree</field>
            <field name="model">hr_system.department</field>
            <field name="arch" type="xml">
                <tree string="Departments">
                    <field name="name" />
                    <field name="manager_id" />
                    <field name="employee_ids" widget="one2many_list"
                        context="{'default_department_id': id}" />
                </tree>
            </field>
        </record>

        <record id="action_department" model="ir.actions.act_window">
            <field name="name">Departments</field>
            <field name="res_model">hr_system.department</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
        </record>
    </data>
</odoo>